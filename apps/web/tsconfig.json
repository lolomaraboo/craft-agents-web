{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/client/*"],
      "@config/*": ["./src/client/config/*"],
      "@craft-agent/ui": ["../../packages/ui/src"],
      "@craft-agent/ui/*": ["../../packages/ui/src/*"],
      "@craft-agent/shared": ["../../packages/shared/src"],
      "@craft-agent/shared/*": ["../../packages/shared/src/*"],
      "@craft-agent/core": ["../../packages/core/src"],
      "@craft-agent/core/*": ["../../packages/core/src/*"]
    }
  },
  "include": ["src/client/**/*"],
  "exclude": ["src/server/**/*", "node_modules"]
}
